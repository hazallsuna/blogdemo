@model PostViewModel
<div class="container border p-4 bg-white">
    <h1 class="text-danger mb-4">Delete Post</h1>
    <div class="alert alert-warning">
        <h4>Are you sure you want to delete this post?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5>@Model.Title</h5>
        </div>
        <div class="card-body">
            <p>@Model.Description</p>
            <p><small class="text-muted">Category: @Model.CategoryName</small></p>
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="~/@Model.Image" style="max-height: 100px;" class="img-thumbnail" />
            }
            <p><small class="text-muted">Published on: @Model.PublishedOn.ToShortDateString()</small></p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-6">
            <a asp-action="Index" class="btn btn-secondary w-100">
                <i class="fas fa-arrow-left"></i> Cancel
            </a>
        </div>
        <div class="col-6">
            <form asp-action="Delete" asp-route-id="@Model.PostId" method="post">
                <button type="submit" class="btn btn-danger w-100">
                    <i class="fas fa-trash"></i> Delete Post
                </button>
            </form>
        </div>
    </div>
</div>